[user]
	name = <%= name %>
	email = <%= email %>
[alias]
	co = checkout
	st = status
	ci = commit
[apply]
	whitespace = nowarn
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	excludesfile = <%= home_dir %>/.gitignore
[github]
	user = <%= github_login %>
[push]
	default = current
[branch]
	autosetupmerge = true
